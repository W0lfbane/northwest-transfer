<%= form_for @project do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    
    <%= content_tag :div, class: 'form-group' do %>    
        <%= f.label :title %>
        <%= f.text_field :title %>
    <% end %>

    <%= content_tag :div, class: 'form-group' do %>    
        <%= f.label :description %>
        <%= f.text_area :description %>
    <% end %>

    <%= content_tag :div, class: 'form-group' do %>    
        <%= f.label :address %>
        <%= f.text_field :address %>
    <% end %>

    <%= content_tag :div, class: 'form-group' do %>    
        <%= f.label :city %>
        <%= f.text_field :city %>
    <% end %>

    <%= content_tag :div, class: 'form-group' do %>    
        <%= f.label :state %>
        <%= f.select :state, options_for_select(['1','2','3']) %>
    <% end %>

    <%= content_tag :div, class: 'form-group' do %>    
        <%= f.label :postal, I18n.t(:postal_code).capitalize %>
        <%= f.text_field :postal %>
    <% end %>

    <%= content_tag :div, class: 'form-group' do %>    
        <%= f.label :country %>
        <%= f.select :country, options_for_select(['1','2','3']) %>
    <% end %>

    <%= content_tag :div, class: 'form-group' do %>    
        <%= f.label :start_date %>
        <%= f.datetime_local_field :start_date %>
    <% end %>

    <%= content_tag :div, class: 'form-group' do %>    
        <%= f.label :estimated_completion_date %>
        <%= f.datetime_local_field :estimated_completion_date %>
    <% end %>

    <%= content_tag :div, class: 'form-group' do %>    
        <%= f.label :resource_state, :status %>
        <%= f.select :resource_state, resource_states(Project), { include_blank: true } %>
    <% end %>

    <%= f.fields_for :tasks do |builder| %>
        <%= render 'tasks/task_fields', f: builder %>
    <% end %>

    <%= link_to_add_fields 'Add Task', f, :tasks, { partial: 'tasks/task_fields' } %>
    
    <%= f.fields_for :notes do |builder| %>
        <%= render 'notes/note_fields', f: builder %>
    <% end %>
    
    <%= link_to_add_fields 'Add Note', f, :notes, { partial: 'notes/note_fields' } %>

    <%= f.fields_for :document do |builder| %>
        <%= render 'documents/document_fields', f: builder %>
    <% end %>

    <p><%= f.submit %></p>
<% end %>